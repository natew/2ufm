<div class="title">
  <%= image_tag @user.avatar.url(:small), :class => 'icon' %>
  <h2 class="icon"><%= @user.username %><small>See what <%= @user.username %> likes and listens to.</small></h2>
  
  <ul class="title_nav">
    <li id="follow-<%= @user.station.id %>"><%= follow_station(@user.station) %></li>
  </ul>
</div>

  <div class="twothirds">
    <%= render :partial => 'songs/new' %>

    <%- if @user.station.songs.empty? -%>
      <h4>No songs yet!  Browse some blogs, artists, or just post your music!</h4>
    <%- else -%>
      <%= render :partial => 'stations/playlist', :locals => { :station => @user.station } %>
    <%- end -%>
  </div>

  <div class="third">
    <h3>Recently Played</h3>
    <ul class="list">
      <%= render :partial => 'play', :collection => @plays %>
    </ul>
  </div>