    <div class="whole">
      <h2>Account <small><%= current_user.full_name %></small></h2>
      <%= form_for current_user, :url => { :action => :edit }, :html => { :multipart => true } do |f| %>
        <%= render 'shared/form_errors', :target => current_user %>

        <fieldset>
          <legend>Profile</legend>
          <div class="clearfix">
            <%= label :user, :username, 'Username', :class => 'inline' %>
            <%= f.text_field :username %>
          </div>

          <div class="clearfix">
            <%= label :user, :avatar, 'Avatar' %>
            <%= image_tag current_user.avatar.url(:medium) %>
            <%= file_field :user, 'avatar', :class => 'file' %>
          </div>

          <%- if current_user.avatar.exists? -%>
            <%= label :avatar, :delete, 'Delete avatar?' %>
            <%= check_box :avatar, :delete %>
          <%- end -%>
        </fieldset>

        <fieldset>
          <legend>Account Information</legend>
          <%= label :user, :email, 'Email', :class => 'inline' %>
          <%= f.text_field :email %><br />
        </fieldset>

        <fieldset>
          <legend>Update Password</legend>

          <div class="clearfix">
            <%= label :user, :old_password, 'Old Password', :class => 'inline' %>
            <%= f.password_field :old_password, :autocomplete => 'off' %>
          </div>

          <div class="clearfix">
            <%= label :user, :password, 'New Password', :class => 'inline' %>
            <%= f.password_field :password, :autocomplete => 'off' %>
          </div>

          <div class="clearfix">
            <%= label :user, :password_confirmation, 'Confirm', :class => 'inline' %>
            <%= f.password_field :password_confirmation, :autocomplete => 'off' %>
          </div>
        </fieldset>

        <%= submit_tag 'Update', :class => 'submitbutton inline' %>
      <% end %>
    </div>