  <div class="whole">
    <% cache('main_index_artists') do %>
      <h3>Recommended <%= link_to 'Artists', artists_path %></h3>
      <%= render partial: 'stations/featured_shelf', locals: { items: @artists  } %>
    <% end %>
    <%= render partial: 'stations/follows_js', locals: { ids: @artists.map(&:id) } if user_signed_in? %>

    <div class="message">
      Welcome!  We bring the best new music from music blogs to you. <%= link_to 'Learn more', about_main_path %>.
    </div>

    <div class="threefourths-wrap">
      <div class="threefourths">
        <h3>Today's most played songs</h3>
        <%= render partial: 'stations/playlist', locals: { station: @songs_station, songs: @songs, classname: 'show-count', dont_paginate: true, already_limited: true } %>
      </div>
    </div>

    <div class="fourth">
      <h3>Play Genre</h3>
      <%= render 'genres/list' %>
    </div>
  </div>