<div class="whole promo">
  <h2>Featured Stations</h2>
  <div class="shelf">
    <%= render :partial => 'stations/promo', :collection => @promos %>
  </div>
</div>

<%- if user_signed_in? -%>

    <div class="whole nav-container">
      <h2 class="nav-menu">
        <%=link_to 'Music feed', '#my-feed', :class => 'control active' %>
        <%=link_to 'My stations', '#my-stations', :class => 'control' %>
      </h2>

      <div id="my-feed" class="section  active">
        <%- if @has_songs -%>
          <%= render :partial => 'stations/playlist', :locals => { :station => @user_station, :songs => @user_songs, :nolimit => true } %>
        <%- else -%>
          <p class="attention"><strong>Your feed is empty!</strong> Enjoy todays most popular songs until you start following some stations!</p>
          <%= render :partial => 'stations/playlist', :locals => { :station => @user_station, :songs => @user_songs, :nolimit => true } %>
        <%- end -%>
      </div>

      <div id="my-stations" class="section">
        <div class="stations">
          <%= render_stations @user_stations %>
        </div>
      </div>
    </div>

<%- else -%>

  <div class="whole">
    <h2>Todays top songs</h2>
    <%= render :partial => 'stations/playlist', :locals => { :station => @popular, :songs => @popular_songs } %>
  </div>

<%- end -%>