<%- if user_signed_in? -%>

  <div class="twothirds-wrap">
    <div class="twothirds nav-container">
      <h2 class="nav-menu">
        <%=link_to 'My feed', '#my-feed', :class => 'control active' %>
        <%=link_to 'My stations', '#my-stations', :class => 'control' %>
      </h2>

      <div id="my-feed" class="section  active">
        <%- if @has_songs -%>
          <%= render :partial => 'stations/playlist', :locals => { :station => @user_station, :songs => @user_songs, :partial => true } %>
        <%- else -%>
          <p class="attention"><strong>Your feed is empty!</strong> Enjoy todays most popular songs until you start following some stations!</p>
          <%= render :partial => 'stations/playlist', :locals => { :station => @user_station, :songs => @user_songs, :partial => true } %>
        <%- end -%>
      </div>

      <div id="my-stations" class="section">
        <div class="stations">
          <%= render_stations @user_stations %>
        </div>
      </div>
    </div>
  </div>

<%- else -%>

  <div class="twothirds-wrap">
    <section class="twothirds welcome">
      <h1><%= @catchphrases[Random.rand(0..4)].html_safe %></h1>

      <div class="third">
        <%= image_tag '/images/octo_dj.png', :id => 'octo-dj' %>
        <p>We find songs from all over the net.</p>
      </div>

      <div class="third">
        <%= image_tag '/images/octo_dj.png', :id => 'octo-dj' %>
        <p>You follow artists, blogs &amp; friends.</p>
      </div>

      <div class="third">
        <%= image_tag '/images/octo_dj.png', :id => 'octo-dj' %>
        <p>Add favorites &amp; share with friends!</p>
      </div>
    </section>

    <div class="twothirds">
      <h2>Todays top songs</h2>
      <%= render :partial => 'stations/playlist', :locals => { :station => @popular, :songs => @popular_songs } %>
    </div>
  </div>

<%- end -%>

  <div class="third">
    <h2>Top Blogs</h2>
    <div class="stations">
      <%= render_stations @blog_stations, :nofollow => true %>
    </div>

    <h2>Top Artists</h2>
    <div class="stations">
      <%= render_stations @blog_stations, :nofollow => true %>
    </div>

    <h2>Top Stations</h2>
    <div class="stations">
      <%= render_stations @blog_stations, :nofollow => true %>
    </div>
  </div>