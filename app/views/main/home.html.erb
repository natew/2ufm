<%- if !user_signed_in? -%>
<div class="announce">
    <strong>The best new music from around the web.</strong>
    Find and share new music with your friends.  Sign up for free!
</div>
<%- else -%>
<div class="title">
  <h2>Welcome, <%= current_user.username %></h2>
  <div class="title_nav"><%= link_to 'My Station', current_user, :class => 'button' %></div>
</div>
<%- end -%>

<%- if !user_signed_in? -%>
<div class="shelf">
  <h3>Featured Stations</h3>
  <ul>
    <%= render :partial => 'stations/shelf', :collection => @featured %>
  </ul>
</div>
<%- end -%>

<div class="twothirds">
<%- if user_signed_in? -%>
  <h3>Song Feed</h3>
  <%= render :partial => 'stations/playlist', :locals => { :station => @feed } %>
<%- else -%>
  <h3>Popular Now</h3>
  <%= render :partial => 'stations/playlist', :locals => { :station => @popular } %>
  <%= link_to 'Browse more songs', '/songs', :class => 'button right' %>
<%- end -%>
</div>

<div class="third">
  <%- if user_signed_in? -%>
  <div class="shelf">
    <h3>Featured Blogs</h3>
    <ul>
      <%= render :partial => 'stations/shelf', :collection => @featured %>
    </ul>
  </div>
  <%- end -%>
  
  <section>
    <h3>Browse by Genre</h3>
    <ul id="genres">
    <%= render @genres %>
    </ul>
  </section>

  <section>
    <h3>Artists</h3>
    <ul class="list">
      <%= render :partial => 'artists/artist', :collection => @artists unless @artists.nil? %>
    </ul>
    <%= link_to 'Browse more artists', '/artists', :class => 'button' %>
  </section>
</div>