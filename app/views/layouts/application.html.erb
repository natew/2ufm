<head>
  <meta charset="utf-8">
  <%= csrf_meta_tag %>

  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame
       Remove this if you use the .htaccess -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>fuse.fm</title>
  <meta name="description" content="">
  <meta name="author" content="">

  <!-- Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Place favicon.ico and apple-touch-icon.png in the root directory: mathiasbynens.be/notes/touch-icons -->

  <!-- CSS: implied media="all" -->
  <%= stylesheet_link_tag "application" %>

  <!-- More ideas for your <head> here: h5bp.com/docs/#head-Tips -->

  <!-- All JavaScript at the bottom, except for Modernizr and Respond.
       Modernizr enables HTML5 elements & feature detects; Respond is a polyfill for min/max-width CSS3 Media Queries
       For optimal performance, use a custom Modernizr build: www.modernizr.com/download/ -->
  <%= javascript_include_tag "modernizr" %>
</head>

<body class="controller-<%= params[:controller].parameterize %> view-<%= params[:view] %>">

  <header>
    <div class="page-contain">
      <h1><%= link_to 'fuse.fm', '/' %> </h1>
      <nav>
        <%= link '<span>Popular</span>'.html_safe, '/popular', :id => 'nav-popular' %>
        <%= link '<span>Stations</span>'.html_safe, '/stations', :id => 'nav-stations' %>
        <%= link '<span>Blogs</span>'.html_safe, '/blogs', :id => 'nav-blogs' %>
      </nav>
      
      <%= form_tag '/main/search', :method => 'get' do %>
        <%= text_field_tag :query,'', :placeholder =>'Enter URL, Genre, Artist' %>
      <% end -%>
      
      <div id="player">
        <div id="player-meta">
          <span id="player-station">Station: <%= link_to 'Radio Electronic FM', '#' %></span>
          <strong>
            <%= link_to 'Add Favorite', '#', :class => 'player-favorite' %>
            <%= link_to 'Jay-Z &amp; Kanye West - Why I Love You (Feat. Mr. Hudson)'.html_safe, '#', :class => 'player-title' %>
            <div id="player-progress-bar">
              <div id="player-progress-position"></div>
              <div id="player-progress-loaded"></div>
            </div>
          </strong>
        </div>
        <div id="player-controls">
          <%= link_to 'Previous', '#', :class => 'fr-button prev' %>
          <%= link_to 'Play', '#', :class => 'fr-button-main play' %>
          <%= link_to 'Next', '#', :class => 'fr-button next' %>
        </div>
      </div>
      
      <div id="user-controls">
        <% if user_signed_in? %>
          <%= link_to 'Log Out', destroy_user_session_path, :method => 'delete', :class => 'top' %>        
        <% else %>
          <%= link_to 'Log In', new_user_session_path, :class => 'top' %>  
        <% end %>
        <% if user_signed_in? %>
          <%= link_to 'Account', edit_user_registration_path, :class => 'bot' %>
        <% else %>
          <%= link_to 'Sign Up', new_user_registration_path, :class => 'bot'  %>
        <% end %>
      </div>
    </div>
  </header>
  
  <% if notice or alert %>
  <div id="notice">
    <div class="page-contain">
      <span class="notice"><%= notice %></span>
      <span class="alert"><%= alert %></span>
    </div>
  </div><br />
  <% end %>
  
  <div id="main-mid">
    <div class="page-contain">
      <div id="body">
      <%= yield %>
      </div>
    </div>
  </div>
  
  <div id="main-bot">
    <div class="page-contain">
    
    </div>
  </div>

  <%= javascript_include_tag "application" %>

	
