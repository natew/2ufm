<!doctype html>
<html lang="en">
<head>
  <!-- Meta -->
  <meta charset="utf-8">
  <%= csrf_meta_tag %>
  <meta name="author" content="Nate Wienert">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

  <%- if params[:listen]
        @listen_song = Song.find(params[:listen_song_id]) -%>
    <!-- OpenGraph -->
    <meta property="og:title" content="<%= @listen_song.full_name %>" />
    <meta property="og:description" content="Listen now on 2u.fm" />
    <meta property="og:image" content="<%= @listen_song.resolve_image %>" />
  <%- else -%>
    <meta property="og:title" content="<%= title %>" />
    <meta property="og:description" content="Listen to new music on 2u.fm" />
    <meta property="og:image" content="http://2u.fm/images/2ufm-standalone.png" />
  <%- end -%>

  <title><%= title %></title>

  <!-- HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

  <%= stylesheet_link_tag "application", :debug => Rails.env.development? %>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,700' rel='stylesheet' type='text/css'>

  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-32843361-1']);
    _gaq.push(['_trackPageview']);
    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

    _prf_start = new Date().getTime();
  </script>

  <script type="text/javascript">
    var updateBroadcastsIds, updateListensIds, updateBroadcastsCounts,
        broadcastedIds = [], updateFollowsIds = [];

    <%- if user_signed_in? -%>
      beginListen = <%= raw current_user.listens.last.as_json.to_json %>;
    <%- else -%>
      beginListen = false;
    <%- end -%>
  </script>
</head>

<body class="<%= body_classes %>" data-soundcloud-key="<%= Yetting.soundcloud_key %>" data-media="<%= Yetting.s3_url %>"<% if user_signed_in? %> data-user="<%= current_user.id %>" <% if current_user.can_download? %> data-role="admin"<% end %><% end %>>

  <div id="body-wrap">
    <header>
      <h1><%= link_to '2u.fm', '/', title: '2u.fm, find and share music' %></h1>
      <%= link_to 'More', '#more-menu', id: 'more-nav', class: 'control nav-click', 'data-pad' => '1px' %>

      <div id="buttons">
        <span class="broadcast">
          <%= render partial: "songs/broadcast", locals: { action: 'add', id: '0', count: 'Like', extra_class: 'disabled'  } %>
          <%= render partial: "songs/broadcast", locals: { action: 'destroy', id: '0', count: 'Unlike'  } %>
        </span>
        <%= link_to 'Share', '#share', :id => 'player-share', :class => 'nav-hover control icon-link disabled update-clipboard', 'data-pad' => '5'  %>
        <%= link_to 'Playlist', '#player-playlist', :class => 'nav-hover control icon-music disabled', :id => 'nav-music', 'data-pad' => '5' %>
        <%# link_to 'Off', '#friends', id: 'tune-in', class: 'nav-hover hover-off control icon-globe tip-e', 'data-pad' => '18' %>
        <% if user_signed_in? %>
          <%= link_to "Me #{image_tag(current_user.avatar.url(:small))}".html_safe, station_path(current_user), class: 'nav-hover icon-user restricted', 'data-pad' => '5', 'data-target' => '#nav-user' %>
        <% else %>
          <%= link_to "Me", '', class: 'nav-hover icon-user control restricted', 'data-pad' => '5', 'data-target' => '#nav-user' %>
        <% end %>
        <%= render partial: 'shared/notifications' %>
      </div>

      <a id="mobile-nav" class="icon control" href="/">l</a>
    </header>

    <div id="player">
      <div id="player-controls" class="player-buttons">
        <%= link_to '<span>4</span>'.html_safe, '#', :class => 'play icon control', :id => 'player-play', :title => 'Play/pause' %>
        <%= link_to '<span>7</span>'.html_safe, '#', :class => 'next icon control', :id => 'player-next', :title => 'Next song' %>
      </div>

      <div id="player-main">

        <div id="player-meta">
          <span id="player-song-name"><a title="Return to song" class="tip-n" href="">&nbsp;</a></span>
          <span id="player-artist-name">&nbsp;</span>
        </div>

        <div id="player-bottom">
          <div id="player-mini-controls">
            <div id="player-volume" class="tip-n" title="Volume">
              <div id="player-volume-position" style="width:100%;"></div>
            </div>
            <%= link_to 'Normal', "", :id => 'player-mode', :class => 'control icon-normal post tip-n', title: 'Toggle shuffle/repeat' %>
          </div>

          <div id="player-progress-bar">
            <div id="player-progress-grabber"></div>
            <div id="player-progress-inner-wrap">
              <div id="player-progress-position"></div>
              <div id="player-progress-loaded"></div>
            </div>
          </div>

          <div id="player-timer">0:00</div>
        </div>

      </div>
    </div>

    <div id="player-live">
      <%= link_to '0 people listening to you', '', 'data-count' => '0' %>
    </div>

    <div id="main-mid">
      <%= form_tag '/do/search', :method => 'get', :id => "search-form" do %>
        <%= text_field_tag :query, '', placeholder: 'Search artists, songs, blogs and users', tabindex: '1' %>
        <%= submit_tag :s, :id => 'search', :class => 'icon tip-n', :title => 'Search!' %>
      <% end -%>

      <div id="navbar">
        <div id="navbar-menus">
          <div id="navbar-menus-inner">
            <section>
              <%= link_to 'Home', user_signed_in? ? users_home_path : home_path, :id => 'nav-home', :class => 'icon-home'  %>
              <%= link_to 'Feed', feed_user_path(current_user), class: 'icon-list' if user_signed_in? %>
              <%= link_to 'Trending', songs_trending_path, :id => 'nav-trending', :class => 'icon-pulse'  %>
              <%= link_to 'Newest', songs_fresh_path, :id => 'nav-new', :class => 'icon-time' %>
            </section>

            <section>
              <h1>Browse</h1>
              <%= link_to 'Artists', artists_path, :id => 'nav-artists', :class => 'icon-users' %>
              <%= link_to 'Tags', tags_path, :id => 'nav-tags', :class => 'icon-tags' %>
              <%= link_to 'Blogs', blogs_path, :id => 'nav-artists', :class => 'icon-newspaper' %>
            </section>

            <section>
              <h1 href="#navbar-genres" data-toggle="invisible">Genres</h1>
              <%# link_to 'Genres', '#navbar-genres', :id => 'nav-genres', :class => 'icon-music control', 'data-toggle' => 'invisible' %>

              <div id="navbar-genres" class="scroll-section">
                <div id="navbar-genres-wrap">
                  <%= render 'genres/links' %>
                </div>
              </div>
            </section>

            <% unless user_signed_in? %>
            <section class="nav-extra account">
              <h1>Account</h1>
              <%= link_to 'Log in', '#modal-login', class: 'icon-key modal control' %>
            </section>

            <section class="nav-info hidden">
              <p>2u.fm finds new music from across the web.</p>
              <p>Like songs &amp; share them with friends.</p>
              <p>The best ones filter to the top!</p>
              <%= link_to 'Learn more here', '#modal-login', class: 'modal control' %>
            </section>
            <% end %>
          </div>
        </div>

        <% if user_signed_in? %>
        <section id="navbar-friends" class="nav-bottom hidden">
          <h1 class="tip-w" title="Online and offline friends">Friends</h1>
          <div class="scroll-section">
            <div id="navbar-friends-inner"></div>
          </div>
        </section>
        <% end %>

        <section id="feedback">
      </div>

      <div id="body">
        <%= render template: 'layouts/single' %>
      </div>

      <% if false %>
      <%# ad_spot('leaderboard', controller) do |ad| %>
        <div id="promo-fixed-lower">
          <%= ad %>
        </div>
      <%# end %>
      <% end %>
    </div>
  </div>

  <!-- Hover menus -->

  <div id="nav-user" class="pop-menu right-align">
    <%- if user_signed_in? -%>
    <%= link_to 'Feed', feed_user_path(current_user), class: 'icon-list' %>
    <%= link_to 'Following', following_user_path(current_user), class: 'icon-add' %>
    <%= link_to "Inbox #{render(partial:'shared/notifications')}".html_safe, '/shares/inbox', class: 'icon-inbox', 'data-shares' => current_user.received_songs_notifications %>
    <%= link_to "Account", user_account_path, class: 'icon-gear'  %>
    <%= link_to 'Log out', destroy_user_session_path, method: 'delete', class: 'secondary', title: 'Log out' %>
    <%- else -%>
      <%= link_to 'Log in', '#modal-login', class: 'icon-key modal control' %>
    <%- end -%>
  </div>

  <div id="player-playlist" class="pop-menu right-align"></div>
  <div id="player-playlist-template" class="hidden">
    <h4>{{station.title}}</h4>
    {{#songs}}
      <a class="control song-{{id}}" href="#song-{{id}}" data-index="{{index}}">
        <span class="artist">{{artist_name}}</span> - <span class="name">{{name}}</span>
      </a>
    {{/songs}}
  </div>

  <div id="share" class="pop-menu">
    <%= link_to image_tag('/images/facebook.png'), '', :class => 'player-invite control popup', 'data-dimensions' => '800,400', 'data-link' => 'http://facebook.com/sharer.php?u={{url}}&t={{text}}' %>
    <%= link_to image_tag('/images/twitter.png'), '', :class => 'player-invite control popup', 'data-dimensions' => '600,300', 'data-link' => 'https://twitter.com/share?url={{url}}&text={{text}}' %>
    <span id="share-link-container"><%= link_to "j", '', :id => 'share-link', :class => 'control icon tip', :title => "Copy link to clipboard", 'data-click' => '3' %></span>
    <div id="share-friends"></div>
  </div>

  <div id="buy" class="pop-menu">
    <%= link_to 'iTunes', itunes_affiliate_url(0), class: 'popup control', 'data-dimensions' => '450x450' %>
    <%= link_to 'Amazon', amazon_affiliate_url(0), class: 'popup control' %>
  </div>

  <div id="flag" class="pop-menu">
    <a href="#" class="control flag-dislike">Dislike</a>
    <a href="#" class="control flag-artist">Wrong Artist</a>
    <a href="#" class="control flag-title">Nixed Title</a>
    <a href="#" class="control flag-genre">Incorrect Genre</a>
    <a href="#" class="control flag-quality">Bad Quality</a>
  </div>

  <div id="more-menu" class="pop-menu close-on-click">
    <div id="head-colors" class="colors">
    <% (1..5).each do |color| %>
      <%= link_to '', "theme-head-#{color}", class: "head-color-#{color}" %>
    <% end %>
    </div>
    <div id="body-colors" class="colors">
    <% (1..5).each do |color| %>
      <%= link_to '', "theme-body-#{color}", class: "body-color-#{color}" %>
    <% end %>
    </div>

    <%= link_to 'About Us', about_main_path %>
    <%= link_to 'Legal', legal_main_path %>
    <%= link_to 'Privacy', privacy_main_path %>
    <%= link_to 'Contact', contact_main_path %>
  </div>

  <div id="friends" class="pop-menu right-align"></div>


  <!-- Modals -->

  <div id="overlay" class="shown slow-fade"></div>
  <div id="modal"></div>

  <div class="hidden">
    <% if !user_signed_in? %>
      <%= render 'modals/login' %>
    <% else %>

      <% if current_user.provider == 'facebook' and current_user.facebook_id.nil? %>

        <div id="modal-new-user">
          <h3>Please re-sync with Facebook</h3>
          <p>To allow friends to find you, please sync with Facebook again!  Sry bout that yo.</p>
          <div class="actions">
            <%= link_to "Link with Facebook", user_omniauth_authorize_path(:facebook), :class => 'facebook-button login-button popup button control', 'data-dimensions' => '800,500' %>
          </div>
        </div>

      <% elsif current_user.full_name.nil? or current_user.full_name == '' %>

        <div id="modal-new-user">
          <h3>Please enter your name</h3>
          <div class="inline">
            <%= form_tag user_account_path do %>
              <div class="clearfix">
                <%= label :user, :full_name, 'Full Name', :class => 'inline' %>
                <%= text_field_tag 'user[full_name]' %>
              </div>

              <div class="actions">
                <%= submit_tag 'Update', :class => 'right' %>
              </div>
            <% end %>
          </div>
        </div>

      <% elsif current_user.first_time? %>
        <%= render 'modals/new_user' %>
      <% end %>

    <% end %>

    <div id="sc-button-template">
      <a class="popup control tip" title="Soundcloud" href=""><img src="/images/soundcloud.png" /></a>
    </div>

    <div id="friends-template">
      <div class="online">
      {{#online}}
        <%= render partial: 'users/friend_link' %>
      {{/online}}
      </div>
      {{#offline}}
        <%= render partial: 'users/friend_link' %>
      {{/offline}}
      <%= link_to "Find friends", users_friends_path, id: 'nav-friends', class:'friend-link' %>
    </div>
  </div>

  <!-- Others -->
  <div id="song-dragger" class="icon">m</div>
  <div id="spinner" class="hidden"></div>
  <div id="null"></div>
  <div id="tunein"></div>

  <% unless user_signed_in? %>
    <div id="welcome">
      <h3>What is 2u.fm?</h3>
      <section>
        <h1>Up to the minute new music from the top music sites.</h1>
        <h1>Your music profile, your daily new music feed.</h1>
        <h1>Keep up with new releases from your favorite artists.</h1>
      </section>
      <%= link_to 'D', '', :class => 'control icon', :id => 'close-welcome' %>
    </div>
  <% end %>

    <script type="text/javascript">
      <%- if params[:listen] -%>
        var listen = <%= raw params[:listen] %>,
            route = "<%= params[:route] %>";
      <%- else -%>
        var listen, route;
      <%- end -%>
    </script>

  <%= javascript_include_tag "application", :debug => Rails.env.development? %>
  <%= subscribe_to "/users/#{current_user.id}" if user_signed_in? %>

  <!--[if lt IE 10]>
  <div id="ie-notice">
    <h3>Our site only works in <a href="http://browsehappy.com/" target="_blank">modern browsers</a>.</h3>
    <p>If you can't use another browser, we recommend upgrading or installing the
    <a href="http://www.google.com/chromeframe" target="_blank">Google Chrome Frame</a> plugin for the best experience.</p>
  </div>

  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/chrome-frame/1/CFInstall.min.js"></script>
  <script>
    modal('#ie-notice');
  </script>
  <![endif]-->
</body>
</html>