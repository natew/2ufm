<head>
  <script type="text/javascript">
    // Redirect to HashBang URI's
    if (window.location.pathname != '/') {
      window.location = ('/#!' + window.location.pathname);
    }
  </script>
  <meta charset="utf-8">
  <%= csrf_meta_tag %>

  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>fuse.fm</title>
  <meta name="description" content="">
  <meta name="author" content="">

  <!-- Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Place favicon.ico and apple-touch-icon.png in the root directory: mathiasbynens.be/notes/touch-icons -->

  <%= stylesheet_link_tag "application" %>

  <!-- Modernizr  -->
  <%= javascript_include_tag "modernizr" %>
</head>

<body>
  <header>
    <div class="page-contain">
      <h1><%= link_to 'fuse.fm', '/' %> </h1>
      <nav>
        <%= link 'New', '/songs', :id => 'nav-new' %>
        <%= link 'Popular', '/songs/popular', :id => 'nav-popular' %>
        <%= link 'Stations', '/stations', :id => 'nav-stations' %>
        <%= link 'Blogs', '/blogs', :id => 'nav-blogs' %>
      </nav>
      
      <div id="player">
        <div id="player-meta">
          <%= link_to 'Why I Loved You (feat. Hudson)', '#', :id => 'player-song' %>
          <%= link_to 'Kanye West &amp; Jay-Z'.html_safe, '#', :id => 'player-artist' %>
        </div>
        <div id="player-controls">
          <%= link_to 'Play', '#', :class => 'play control' %>
          <%= link_to 'Next', '#', :class => 'next control' %>
          <div id="player-progress-bar">
            <div id="player-progress-position">
              <%= link_to 'Progress', '#', :class => 'progress control' %>
            </div>
            <div id="player-progress-loaded"></div>
          </div>
          <%= link_to 'Favorite', '#', :class => 'fav control' %>
          <%= link_to 'Station', '#', :class => 'radio control' %>
        </div>
      </div>
      
      <%= form_tag '/main/search', :method => 'get' do %>
        <%= text_field_tag :query, '', :placeholder =>'Search blogs, songs...' %>
      <% end -%>
      
      <div class="nav">
        <% if user_signed_in? %>
          <%= link_to "#{current_user.username} &darr;".html_safe, edit_user_registration_path, :class => 'bot' %>
          <div class="nav-dropdown">
            <%= link_to "#{image_tag(current_user.avatar.url(:small))} Profile".html_safe, current_user %>
            <%= link_to "Account".html_safe, '/users/edit' %>
            <%= link_to 'Log Out', destroy_user_session_path, :method => 'delete', :class => 'top' %>
          </div>
        <% else %>
          <%= link_to 'Login', new_user_session_path, :class => 'top' %>  
          <%= link_to 'Signup', new_user_registration_path, :class => 'bot'  %>
        <% end %>
      </div>
    </div>
  </header>
  
  <% if notice or alert %>
  <div id="notice">
    <div class="page-contain">
      <span class="notice"><%= notice %></span>
      <span class="alert"><%= alert %></span>
    </div>
  </div><br />
  <% end %>
  
  <div id="main-mid">
    <div class="page-contain">
      <div id="body">
      <%= yield %>
      </div>
    </div>
  </div>
  
  <div id="main-bot">
    <div class="page-contain">
      
    </div>
  </div>

  <%= javascript_include_tag "application" %>

