<head>
  <meta charset="utf-8">
  <%= csrf_meta_tag %>

  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame
       Remove this if you use the .htaccess -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>fuse.fm</title>
  <meta name="description" content="">
  <meta name="author" content="">

  <!-- Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Place favicon.ico and apple-touch-icon.png in the root directory: mathiasbynens.be/notes/touch-icons -->

  <!-- CSS: implied media="all" -->
  <%= stylesheet_link_tag "application" %>

  <!-- More ideas for your <head> here: h5bp.com/docs/#head-Tips -->

  <!-- All JavaScript at the bottom, except for Modernizr and Respond.
       Modernizr enables HTML5 elements & feature detects; Respond is a polyfill for min/max-width CSS3 Media Queries
       For optimal performance, use a custom Modernizr build: www.modernizr.com/download/ -->
  <%= javascript_include_tag "modernizr" %>
</head>

<body class="controller-<%= params[:controller].parameterize %> view-<%= params[:view] %>">

  <header>
    <div class="page_contain">
      <h1><%= link_to 'fuse.fm', '/' %> </h1>
      <nav>
        <%= link_to '<span>New</span>'.html_safe, '/new', :id => 'nav_new' %>
        <%= link_to '<span>Popular</span>'.html_safe, '/popular', :id => 'nav_popular' %>
        <%= link_to '<span>Stations</span>'.html_safe, '/stations', :id => 'nav_stations' %>
        <%= link_to '<span>Blogs</span>'.html_safe, '/blogs', :id => 'nav_blogs' %>
        <%= link_to '<span>Search</span>'.html_safe, '/search', :id => 'nav_search' %>
      </nav>
      
      <div id="audio_player">
        <div id="audio_meta">
          <span id="audio_station">Tuned into <%= link_to 'Radio Electronic FM', '#' %></span>
          <strong>
            <%= link_to 'Add Favorite', '#', :class => 'audio_favorite' %>
            <%= link_to 'Jay-Z &amp; Kanye West - Why I Love You (Feat. Mr. Hudson)'.html_safe, '#', :class => 'audio_title' %>
          </strong>
          <span id="audio_source">Posted on <%= link_to '3 blogs', '#' %></span>
        </div>
        <div id="audio_controls">
          <%= link_to 'Previous', '#', :class => 'fr_button prev' %>
          <%= link_to 'Play', '#', :class => 'fr_button_main play' %>
          <%= link_to 'Next', '#', :class => 'fr_button next' %>
        </div>
      </div>
      <div id="user_controls">
        <% if user_signed_in? %>
          <%= link_to 'Log Out', destroy_user_session_path, :method => 'delete', :class => 'top' %>        
        <% else %>
          <%= link_to 'Log In', new_user_session_path, :class => 'top' %>  
        <% end %>
        <% if user_signed_in? %>
          <%= link_to 'Account', edit_user_registration_path, :class => 'bot' %>
        <% else %>
          <%= link_to 'Sign In', new_user_registration_path, :class => 'bot'  %>
        <% end %>
      </div>
    </div>
  </header>
  
  <div id="notice">
    <div class="page_contain">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
  </div>
  
  <div id="main_mid">
    <div class="page_contain">
      <%= yield %>
    </div>
  </div>
  
  <div id="main_bot">
    <div class="page_contain">
    
    </div>
  </div>

  <%= javascript_include_tag "application" %>

	
