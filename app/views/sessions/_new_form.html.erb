<%= form_for(:user, :url => new_user_session_path) do |f| %>
  <div class="clearfix">
    <%= f.label 'Username or email', :for => :login, :id => 'label-login' %>
    <%= f.text_field :login %>
  </div>

  <div class="clearfix">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="clearfix">
    <%= f.check_box :remember_me %> <%= f.label :remember_me, :id => 'remember-me' %>
  </div>

  <div class="actions clearfix">
    <%= f.submit "Sign in" %>
    <p>
      <%= link_to "Forgot your password?", new_user_password_path %>
    </p>
  </div>
<% end %>