<% if controller_name != 'main' %>
  <% separate = 'after' if action_name == 'show'
     title = get_title(@primary) %>
  <div id="breadcrumbs">
    <%= link_to 'Home', '/', :class => 'after' %>
    <%= link_to controller_name.capitalize, '/'+controller_name, :class => separate %>
    <%= link_to title, @primary if action_name == 'show' %>
  </div>
<% end %>

<% if !user_signed_in? %>
  <div id="begin">
    <ul id="tags"></ul>
    <div id="suggestions"><%= @suggestions %></div>
    <button id="create-station">Create Station</button>
  </div>
<% end %>