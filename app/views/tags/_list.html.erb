<%-
  limit ||= 30
  tags    = Tag.common.limit(limit)
  big     = Integer(tags.first.num)
  small   = Integer(tags.last.num)
  tags    = tags.to_a.shuffle!
-%>

<% cache ["tags_list_#{limit}"] do %>
  <ul class="tags">
    <% for tag in tags %>
      <%= render partial: 'tags/tag', locals: { tag: tag, big: big, small: small } %>
    <% end %>
  </ul>
<% end %>