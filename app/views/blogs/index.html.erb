<%= render :partial => 'shared/stations_nav' %>

<div class="whole">
  <p>Browse blogs and subscribe to their stations. <%= link_to 'Submit your blog', new_blog_path %></p>

  <ul class="subnav">
    <li><%= link_to 'Random', '/blogs' %></li>
    <li><%= link_to "#", "/blogs?letter=0" %></li>
    <%- ('A'..'Z').each do |letter| -%>
    <li><%= link_to letter, "/blogs?letter=#{letter}" %></li>
    <%- end -%>
  </ul>

  <div class="shelf">
    <%= render :partial => 'stations/shelf', :collection => @blogs %>
  </div>
</div>