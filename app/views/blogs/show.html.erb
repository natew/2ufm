<div class="title">
  <h2><%= @blog.name %> <small><%= @blog.description || "Browse the latest from #{@blog.name}" %></small></h2>
  
  <ul class="title_nav">
    <li id="follow-<%= @blog.station.id %>"><%= follow_station(@blog.station) %></li>
    <li><%= link_to "Visit Blog &raquo;".html_safe, @blog.url, :target => '_blank', :class => 'button' %></li>
  </ul>
</div>

<div class="twothirds">
  <%= render :partial => 'stations/playlist', :locals => { :station => @blog.station } %>
</div>

<div class="third">
  <div class="image">
    <%= image_tag(@blog.image.url(:original)) %>
  </div>

  <h4>Recent posts</h4>
  <%- if @posts.empty? -%>
  <p>We haven't gotten around to scanning any posts yet!</p>
  <%- else -%>
  <div class="list">
    <%= render :partial => 'post', :collection => @posts, :as => :post %>
  </div>
  <%- end -%>
</div>