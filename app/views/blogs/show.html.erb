<div class="title">
  <h2><%= link_to @blog.name, @blog.url, :target => '_blank' %> <small>Listen to songs posted by <%= @blog.name %></small></h2>
  
  <ul class="title_nav">
    <li id="follow-<%= @blog.station.id %>"><%= follow_station(@blog.station) %></li>
    <li><%= link_to "Visit Blog &raquo;".html_safe, @blog.url, :target => '_blank', :class => 'button' %></li>
  </ul>
</div>

<div class="twothirds">
  <p class="description">
    <%= @blog.description || "Browse the latest from #{@blog.name}" %>
  </p>
  
  <h3>Listen to <%= @blog.name %></h3>
  <%= render :partial => 'stations/playlist', :locals => { :station => @blog.station } %>
</div>

<%= render 'side' %>