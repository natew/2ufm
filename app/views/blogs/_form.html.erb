<%= form_for @blog, :html => { :multipart => true } do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="clearfix">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  
  <div class="clearfix">
    <%= f.label :url, 'URL' %><br />
    <%= f.text_field :url %>
  </div>
  
  <div class="clearfix">
    <%= f.label  :image %>
    <%= f.file_field :image %>
    <span class="help">Images must be at least 256px by 256px</span>
  </div>

  <div class="actions clearfix">
    <%= f.submit "Submit to blog directory" %>
  </div>

<% end %>
