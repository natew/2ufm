<div class="title">
  <%= image_tag @artist.image.url(:small), :class => 'icon' %>
  <h2 class="icon"><%= @artist.name %> Radio <small><%= @station.bio || "Listening to the latest songs from the #{@artist.name} station." %></small></h2>
</div>

<div class="twothirds">
  <%= render :partial => 'playlist', :locals => { :songs => @songs, :station => @station } %>
  <%= paginate @songs %>
</div>

<%= render 'side' %>