<%= form_for(:user, :url => user_registration_path, :html => {:id => 'register-form'}) do |f| %>
  <%= devise_error_messages! if defined? resource %>

  <div class="clearfix">
    <%= f.label :username, "Username".html_safe %>
    <%= f.text_field :username %>
  </div>

  <div class="clearfix">
    <%= f.label :full_name, "Full Name".html_safe %>
    <%= f.text_field :full_name %>
  </div>

  <div class="clearfix">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="clearfix">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up!", id: 'sign-up-button', href: '/' %>
  </div>

  <span class="help">We respect your <%= link_to 'privacy', privacy_main_path, class: 'modal-force-close' %>.</span>
<% end %>
