<%= form_for(:user, :url => new_user_session_path) do |f| %>
  <div class="clearfix">
    <%= f.label :login %>
    <%= f.text_field :login %>
  </div>

  <div class="clearfix">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="clearfix">
    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  </div>

  <div class="actions clearfix">
    <%= f.submit "Sign in" %>
    <p>
      <%= render :partial => "devise/shared/links" %>
    </p>
  </div>
<% end %>