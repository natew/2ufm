<div class="title">
  <div class="image cover-small">
    <%= image_tag(@station.image.url(:small)) %>
  </div>

  <h2><%= @station.title %></h2>
  <p>Updated <%= relative_time @station.last_broadcasted_at %> &middot; <%= pluralize number_with_delimiter(@station.songs.count), 'song' %></p>

  <ul class="title-nav">
    <li id="follow-<%= @station.id %>"><%= follow_station(@station) %></li>
    <li><%= link_to "Share", '/' + @station.slug, :id => 'share-station', :class => 'button clipboard tip', :title => 'Copy link to clipboard', 'data-hover' => 'Copy', 'data-click' => 'Got it!'  %></li>
  </ul>
</div>

<div class="contain">
  <%- if @station.songs.count > 0 -%>
  <div class="twothirds-wrap">
    <div class="twothirds">
      <%= render :partial => 'stations/playlist', :locals => { :station => @station } %>
    </div>
  </div>

  <div class="third">
    <%- if @artists -%>
    <h3>Artists on this station</h3>
    <div class="list">
      <%= render :partial => 'artists/artist', :collection => @artists %>
    </div>
    <%- end -%>
  </div>
  <%- else -%>
  <div class="whole">
    <h2>No songs on this station, yet!</h2>
  </div>
  <%- end -%>
</div>