<div class="title">
  <div class="image cover-small">
    <%= image_tag(@station.image.url(:original)) %>
  </div>

  <h2><%= @station.title %></h2>
  <p><%= @station.description %></p>
  <span class="stats">Updated <%= relative_time @station.last_broadcasted_at %> &middot; <%= pluralize number_with_delimiter(@station.songs.count), 'song' %></span>

  <ul class="title-nav">
    <li id="follow-<%= @station.id %>"><%= follow_station(@station) %></li>
  </ul>
</div>

<div class="contain">
  <div class="twothirds-wrap">
    <div class="twothirds">
      <%= render :partial => 'stations/playlist', :locals => { :station => @station } %>
    </div>
  </div>

  <div class="third">
    <%- if @artists -%>
    <h3>Artists on this station</h3>
    <div class="list">
      <%= render :partial => 'artists/artist', :collection => @artists %>
    </div>
    <%- end -%>
  </div>
</div>