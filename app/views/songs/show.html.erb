<div class="title">
  <%= image_tag @original.image.url(:small), :class => 'icon' %>
  <h2 class="icon">
    <%= @original.name %>
    <small><%= @original.artist_name %></small>
  </h2>
</div>

<div class="twothirds">
  <h3>Listen to <%= @original.name %></h3>
  <%= render :partial => 'stations/playlist', :collection => @songs, :locals => { :station => @blogs.first.station } %>
  
  <h4>Posted on <%= pluralize @blogs.size, 'blog' %></h4>
  <div class="shelf">
    <%= render :partial => 'stations/shelf', :collection => @blogs %>
  </div>
</div>

<div class="third">
  <h4>Re-posted by <%= pluralize @original.users.size, 'person' %></h4>
  <div class="user-list">
    <%= render @original.users %>
  </div>
</div>