<div class="whole">
  <%= render :partial => 'stations/playlist', :locals => { :songs => @song_playlist, :paginate => false, :style => 'song' } %>
</div>

<div class="contain">
  <div class="half">
    <h2>Comments</h2>
    <%= render :partial => 'comments/new_form' %>
  </div>

  <div class="half">
    <h3>Posted on <%= pluralize @blogs.size, 'blog' %></h3>
    <div class="stations list">
      <%= render :partial => 'stations/station', :collection => @blogs %>
    </div>

    <h3>Artists</h3>
    <div class="list">
      <%= render :partial => 'artists/artist', :collection => @song.artists %>
    </div>

    <h3>Broadcasts this week</h3>
    <div id="stats" style="width:100%;height:180px;" data-broadcasts="<%= @stats %>"></div>

    <h3>Similar Songs</h3>
    <%= render :partial => 'stations/playlist', :locals => { :songs => @similar_songs, :paginate => false, :per => 8 } %>
  </div>
</div>