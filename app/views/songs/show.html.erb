<div class="title">
  <h2 class="icon">
    <%= @original.full_name %>
    <small>Artists: <%= links @original.artists %></small>
  </h2>
</div>

<div class="twothirds">
  <%- if @songs.size > 0 %>
    <%= render :partial => 'stations/playlist', :locals => { :songs => @songs } %>
  <%- else -%>
    <%= render :partial => 'single', :locals => { :single => @songs } %>
  <%- end -%>

  <div class="third">
    <h4>Remixes</h4>
    <ul class="list">
    <%- for artist in @original.artists -%>
    <li><%= link_to "#{image_tag(artist.image.url(:small))}Remixes of #{artist.name}".html_safe, artist, :class => 'image' %></li>
    <li><%= link_to "#{image_tag(artist.image.url(:small))}Remixes by #{artist.name}".html_safe, artist, :class => 'image' %></li>
    <%- end -%>
    </ul>
  </div>
  
  <div class="third">
    <h4>Broadcasts this week</h4>
    <div id="stats" style="width:300px;height:250px;" data-broadcasts="<%= @stats %>"></div>
  </div>

  <div class="third">
    <h4>Re-posted by <%= pluralize @original.users.size, 'person' %></h4>
    <div class="list">
    </div>
  </div>
  
  <div class="third">
    <h4>Posted on <%= pluralize @blogs.size, 'blog' %></h4>
    <div class="shelf">
      <%= render :partial => 'stations/shelf', :collection => @blogs %>
    </div>
  </div>
</div>