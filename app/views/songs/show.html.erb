<div class="whole">
  <%= render :partial => 'stations/playlist', :locals => { :songs => @song_playlist, :paginate => false, :style => 'song' } %>
</div>

<div class="contain">
  <div class="twothirds-wrap">
    <div class="twothirds">
      <h2>Comments</h2>
    </div>
  </div>

  <div class="third">
    <h3>Posted on <%= pluralize @blogs.size, 'blog' %></h3>
    <div class="stations">
      <%= render :partial => 'stations/station', :collection => @blogs %>
    </div>

    <h3>Artists</h3>
    <div class="list">
      <%= render :partial => 'artists/artist', :collection => @song.artists %>
    </div>

    <h3>Broadcasts this week</h3>
    <div id="stats" style="width:100%;height:200px;" data-broadcasts="<%= @stats %>"></div>

    <h3>Reposted by <%= pluralize @song.users.size, 'person' %></h3>
    <div class="list">
    </div>
  </div>
</div>