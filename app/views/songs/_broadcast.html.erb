<% title, method, path = (action == 'add') ? 
    ['Add song to your station', :post, broadcast_path(id)] :
    ['Remove song from your station', :delete, broadcast_path(id) ]
%>
  <span class="count"><%= count %></span>
  <%= link_to title, path, class: "broadcast-song #{action} control tip", title: title, remote: true, method: method %>